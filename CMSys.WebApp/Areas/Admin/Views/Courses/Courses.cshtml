@model IEnumerable<Course>

<div class="crnt-container">
    <div class="text1">Course List</div>
    <a asp-area="admin" asp-controller="Courses" asp-action="Create" class="btn btn-primary btn-sm"><i class="far fa-plus-square"></i> Create Course</a>
</div>
<div id="modDialog" class="fade" >
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<div class="main-page">
    <div class="page-title container-row text3">
        <div>Name</div><div>Type</div><div>Group</div><div>Trainers</div><div>Action</div>
    </div>
    @foreach (var course in Model)
    {
        <section class="container-row">
            <article>
                <div class="article-title container-row text3">
                    <div>@course.Name</div><div>@course.CourseType.Name</div><div>@course.CourseGroup.Name</div>
                </div>
                <p class="text3">@course.Description</p>
            </article>
            <div class="trainer-wrap text3 ">
                @foreach(var trainer in course.Trainers)
                {
                     <a data-bs-toggle="modal" data-bs-target="@($"#t{trainer.TrainerId}")" class="text-primary">
                        @trainer.Trainer.User.FullName<br>
                     </a>
                     <partial name="_UserInfo" model="trainer.Trainer" />
                }
            </div>
            <div class="action-wrap container-column">
                <a class="action-blue flex-center" asp-action="Details" asp-route-id="@course.Id" asp-route-returnUrl="https://localhost:5001/Admin/Courses" class="user-details compItem"><i class="fas fa-info"></i></a>
                <a class="action-yellow  flex-center" asp-action="Update" asp-route-id="@course.Id"><i class="fas fa-pencil-alt"></i></a>
                <a class="action-orange flex-center"  asp-action="Trainers" asp-route-id="@course.Id"><i class="fas fa-user-friends"></i></a>
                <a class="action-red flex-center" asp-action="Delete" asp-route-id="@course.Id"><i class="fas fa-trash-alt"></i></a>
            </div>
        </section>
    }
</div>

