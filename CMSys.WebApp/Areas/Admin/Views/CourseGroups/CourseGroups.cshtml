@model IEnumerable<CourseGroup>

<div class="crnt-container">
    <div class="text1">Course Groups</div>
</div>
<div class="main-page text3">
    <div class="container">
        <div class="row title text4">
            <div class="col-5">Name</div>
            <div class="col-3">Description</div>
            <div class="col">Order</div>
            <div class="col">Action</div>
        </div>
        @foreach(var courseGroup in Model)
        {
            <div class="row row-info align-items-center fs-6">
                <div class="col-5">@courseGroup.Name</div>
                <div class="col-3"></div>
                <div class="col">@courseGroup.VisualOrder</div>
                <div class="col" >
                    <div class="action-wrap">
                        <div class="row">
                            <a asp-action="Update" asp-route-id="@courseGroup.Id" class="action-yellow flex-center"><i class="fas fa-pencil-alt"></i></a>
                            <a asp-action="Delete" asp-route-id="@courseGroup.Id" class="action-red flex-center"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

