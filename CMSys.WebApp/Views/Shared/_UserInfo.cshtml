@model Trainer

<div class="modal fade" id="@($"t{Model.Id}")" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text4" id="exampleModalLabel">@Model.User.FullName</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="col-3">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.User.Photo)"/>
            </div>
            <div class="col text3">@Model.Description</div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>